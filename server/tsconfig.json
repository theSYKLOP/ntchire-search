{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"],
      "~/*": ["../*"],
      "#imports": ["../.nuxt/imports.d.ts"]
    }
  },
  "include": [
    "./**/*",
    "../types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

